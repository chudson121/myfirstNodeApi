{
    "extends": "@tsconfig/node20/tsconfig.json",
    "include": ["src/**/*"],
    "exclude": ["node_modules"],

    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "esModuleInterop": true,
        "allowJs": false,
        "outDir": "dist",
        "baseUrl": "./src",
        "strict": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true
    }
        
}
